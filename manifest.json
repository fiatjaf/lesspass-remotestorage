{
  "name": "LessPass remoteStorage",
  "description": "Alternative LessPass extension that optionally saves your password profiles to remoteStorage.",
  "homepage_url": "https://github.com/fiatjaf/lesspass-remotestorage",
  "manifest_version": 2,
  "version" : "0.0.1",
  "applications": {
    "gecko": {
      "id": "lesspass@alhur.es",
      "strict_min_version": "58.0a1"
    }
  },
  "permissions": [
    "activeTab",
    "contextMenus",
    "storage",
    "tabs"
  ],
  "browser_action": {
    "browser_style": true,
    "theme_icons": [{
      "light": "icon-white.svg",
      "dark": "icon-blue.svg",
      "size": 512
    }],
    "default_title": "LessPass remoteStorage"
  },
  "externally_connectable": {
    "matches": ["*://*.alhur.es/*"]
  },
  "background": {
    "scripts": [
      "dist/background.js"
    ]
  },
  "options_ui": {
    "page": "options.html",
    "chrome_style": true,
    "open_in_tab": true
  },
  "icons": {
    "512": "icon-blue.png"
  }
}
